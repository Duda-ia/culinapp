<div class="page-container">
  <div class="result-container <%= @result == 'correct' ? 'correct' : 'incorrect' %>">
    <div class="all-content">

      <% if @result == "correct" %>
        <!-- âœ… Congrats Text with new phrase, color, and spacing -->
        <div class="congrats-text animate-out">YOU ARE SO SMART!</div>

        <div class="answer-badge">
          <div class="answer-content">
            <span class="answer-text"><%= @selected_answer || "YOUR ANSWER" %></span>
          </div>
        </div>

        <p class="result-text">You chose the right answer!</p>

        <%# <img src="chef_icecream.svg" alt="Chef with ice cream" class="character-img"> %>
        <%= image_tag "chef_icecream.svg" %>

      <% else %>
        <!-- âœ… Crying Emoji Animation - closer to the card -->
        <div class="cry-emoji-animation">ğŸ˜­ğŸ˜­ğŸ˜­ğŸ˜­ğŸ˜­ğŸ˜­ğŸ˜­ğŸ˜­ğŸ˜­ğŸ˜­ğŸ˜­ğŸ˜­ğŸ˜­ğŸ˜­ğŸ˜­</div>

        <div class="incorrect-card">
          <h2>Sorry, you didn't get it right this time!</h2>
        </div>
      <% end %>

      <!-- âœ… Action Buttons always visible -->
      <div class="tsk-btn">
        <%= link_to "Play Again", quiz_path(return_to: @return_to), class: "button-gray" %>
        <%= link_to "Back to Recipe", @return_to, class: "button-gray" %>
      </div>

    </div>
  </div>
</div>
