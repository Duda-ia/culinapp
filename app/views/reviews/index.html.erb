<% @reviews.each do |r| %>
  <div class="review-card">
    <% if r.photo.attached? %>
      <%= cl_image_tag r.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %>
      <%= image_tag "plate.png", height: 300, width: 400, crop: :fill %>
    <% end %>
    <p class="review-feedback"><%= r.feedback %></p> <!-- Exibindo a descriÃ§Ã£o da review -->
    <p class="review-rating">Likes: <%= r.rating %></p>
    <%= link_to "Like this dish", like_path(review_id: r.id), method: :post, data: { turbo: false } %>
  </div>
<% end %>
