<div class="auth-container">
  <h2 class="auth-title">Register your account</h2>

  <div class="auth-card">
    <div class="auth-form">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.input :username, required: true, placeholder: "Enter your name" %>
        </div>

        <div class="form-group">
          <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, placeholder: "Enter your email" %>
        </div>

        <div class="form-group">
          <%= f.input :password, required: true, input_html: { autocomplete: "new-password" }, placeholder: "Password" %>
        </div>
 
        <div class="terms-text">
          By registering, you agree with our
          <span class="terms-link">Terms & Conditions</span> and
          <span class="privacy-link">Privacy Policy</span>
        </div>

        <div class="form-actions custom-button">
          <%= f.button :submit, "Register" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="auth-footer">
    <span>Already have an account?</span>
    <%= link_to "Login", new_session_path(resource_name), class: "auth-link" %>
  </div>
</div>
