<div class="login-container">
  <div class="login-card">
    <div class="logo">
      <%= image_tag "logo.svg", alt: "CulinApp Logo" %>
    </div>

    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email", placeholder: "Enter your email" } %>
        <%= f.input :password, required: false, input_html: { autocomplete: "current-password", placeholder: "Password" } %>
      </div>

      <div class="remember-me">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions custom-button">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>

    <div class="forgot-password">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    </div>

    <div class="register-link">
      Don't have an account? <%= link_to "Register", new_registration_path(resource_name) %>
    </div>
  </div>
</div>
